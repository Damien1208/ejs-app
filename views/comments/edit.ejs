<%- include ../partials/header %>

<div class="container">
    <div class="raw" style="width:30%; margin: 25px auto;">
        <h1>Edit your comment</h1>
        <div>
            <form action="/parks/<%= park_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                   <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
                <a href="/parks" class="btn btn-success">Go back</a>
            </form>
        </div>
    </div>
</div>
