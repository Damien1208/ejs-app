<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h2>See below our selection of parks</h2>
            <p>You can as well add your favourite park to our selection</p>
            <p>
                <a class="btn btn-primary btn-large" href="/parks/new">Add a new park</a>
            </p>
        </div>
    </header>
    <div class="row text-center" id="grid">
        <% parks.forEach(function(park) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= park.image %>">
                <div class="caption">
                    <h4><%= park.name %></h4>
                    <span>
                        <%= park.description.slice(0, 100)%>...
                    </span>
                </div>
                <p>
                        <a class="btn btn-primary" href="/parks/<%= park._id %>">
                            Read more
                        </a>
                    </p>
            </div>
           

        </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>
