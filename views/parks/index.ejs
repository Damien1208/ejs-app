<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h2>This is the parks page</h2>
            <p>
                <a class="btn btn-primary btn-large" href="/parks/new">Add a new park</a>
            </p>
        </div>
    </header>
    <div class="row">
        <div class="col-lg-12">
            <h4>Our most popular parks</h4>
        </div>
    </div>
    <div class="row text-center" id="grid">
        <% parks.forEach(function(park) { %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= park.image %>">
                <div class="caption">
                    <h4><%= park.name %></h4>
                    <span>
                        <%= park.description.slice(0, 100)%>...
                    </span>
                </div>
            </div>
            <p>
                <a class="btn btn-primary" href="/parks/<%= park._id %>">
                    Read more
                </a>
            </p>

        </div>
        <% }) %>
    </div>
</div>

<% include ../partials/footer %>
